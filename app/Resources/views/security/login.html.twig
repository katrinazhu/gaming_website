<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/login.css') }}" />
</head>
<body>
    <header>
        <a href="{{ path('logout') }}">Logout</a>
    </header>
    <div class="main-content">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('login') }}" class="form-basic" method="post">
            <div class="form-title-row">
                <h1>Log In</h1>
            </div>
            <div class="form-row">
                <label for="username">
                    <span>Username</span>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />
                </label>
            </div>

            <div class="form-row">
                <label for="password">
                    <span>Password</span>
                    <input type="password" id="password" name="_password" />
                </label>
            </div>
            <input type="hidden" name="_target_path" value="/personnage" />
            <div class="form-row">
                <button type="submit">Log In</button>
            </div>
        </form>
        <form class="form-basic" action=" {{path('register')}} " method="post">
                <button class="asText" type="submit">Don't have an account?</button>
        </form>
    </div>


</body>
</html>